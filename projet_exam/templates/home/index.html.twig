{% extends 'base.html.twig' %}

{% block title %}Centre de loisirs{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Centre de loisirs</h1>
        <ul>
            {% for center in bestCenter %}
                <li>
                    <strong>{{ center.name }}-{{ center.id }}</strong><br>
                    Prix : {{ center.price }} €<br>

                    <ul>
                        {% for activity in center.activity %}
                            <li>{{ activity.name }}</li>
                        {% else %}
                            <li>Aucune activité</li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li>Aucun centre trouvé.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
